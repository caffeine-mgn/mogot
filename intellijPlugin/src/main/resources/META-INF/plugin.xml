<idea-plugin>
    <id>org.jetbrains</id>
    <name>Hello Action Project</name>
    <version>0.0.1</version>
    <vendor email="dummy" url="dummy">dummy</vendor>

    <depends>com.intellij.modules.platform</depends>

    <idea-version since-build="191"/>
    <extensions defaultExtensionNs="com.intellij">
        <!--<fileTypeFactory implementation="pw.binom.FbxFileTypeFactory"/>-->
        <fileType name="Fbx file" implementationClass="pw.binom.FlxFileType" fieldName="INSTANCE"
                  language="FBX" extensions="fbx"/>
        <fileEditorProvider implementation="pw.binom.FbxFileEditorProvider"/>

        <fileType name="Shader file" implementationClass="pw.binom.ShaderFileType" fieldName="INSTANCE"
                  language="Shader" extensions="shr"/>
        <lang.commenter language="Shader" implementationClass="pw.binom.glsl.GLSLCommenter"/>
        <fileEditorProvider implementation="pw.binom.ShaderFileEditorProvider"/>
        <lang.parserDefinition language="Shader" implementationClass="pw.binom.glsl.GLSLParserDefinition"/>
        <lang.braceMatcher language="Shader" implementationClass="pw.binom.glsl.GLSLPairedBraceMatcher"/>
        <lang.syntaxHighlighterFactory language="Shader" implementationClass="pw.binom.glsl.GLSLSyntaxHighlighterFactory"/>
    </extensions>

    <actions>
        <group id="MyPlugin.SampleMenu" text="Greeting" description="Greeting menu">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="Myplugin.Textboxes" class="pw.binom.TestAction" text="Hello" description="Says hello"/>
        </group>
    </actions>

</idea-plugin>